{
    "version": "1.0.0",

    "window": {
        "resizable": false,
        "grid_columnconfigure": {
            "0": {"weight": 1}
        },
        "grid_rowconfigure": {
            "1": {"weight": 1}
        },
        "theme": "{RESOURCES}/theme.json"
    },

    "widgets": [
        {
            "type": "frame",
            "kwargs": {
                "height": 32
            },
            "placement_mode": "grid",
            "placement_kwargs": {
                "column": 0,
                "row": 0,
                "sticky": "nsew",
                "padx": 8,
                "pady": 4
            },
            "grid_columnconfigure": {
                "1": {"weight": 1}
            },
            "widgets": [
                {
                    "type": "channel_label",
                    "placement_mode": "grid",
                    "placement_kwargs": {
                        "column": 0,
                        "row": 0,
                        "sticky": "w"
                    }
                },
                {
                    "type": "version_label",
                    "placement_mode": "grid",
                    "placement_kwargs": {
                        "column": 1,
                        "row": 0,
                        "padx": [16, 0]
                    }
                },
                {
                    "type": "file_version_label",
                    "placement_mode": "grid",
                    "placement_kwargs": {
                        "column": 2,
                        "row": 0,
                        "padx": [16, 0],
                        "sticky": "e"
                    }
                }
            ]
        },
        {
            "type": "frame",
            "placement_mode": "grid",
            "placement_kwargs": {
                "column": 0,
                "row": 1,
                "sticky": "nsew",
                "padx": 32,
                "pady": [16, 8]
            },
            "grid_columnconfigure": {
                "0": {"weight": 1}
            },
            "widgets": [
                {
                    "type": "label",
                    "kwargs": {
                        "image": {
                            "light": "{RESOURCES}/logo.png",
                            "size": 128
                        }
                    },
                    "placement_mode": "grid",
                    "placement_kwargs": {
                        "column": 0,
                        "row": 0
                    }
                },
                {
                    "type": "status_label",
                    "placement_mode": "grid",
                    "placement_kwargs": {
                        "column": 0,
                        "row": 1,
                        "pady": [16, 8],
                        "sticky": "ew"
                    }
                },
                {
                    "type": "progress_bar",
                    "kwargs": {
                        "width": 456,
                        "height": 16
                    },
                    "placement_mode": "grid",
                    "placement_kwargs": {
                        "column": 0,
                        "row": 2,
                        "pady": [8, 0],
                        "sticky": "ew"
                    },
                    "action": "cancel"
                },
                {
                    "type": "button",
                    "placement_mode": "grid",
                    "placement_kwargs": {
                        "column": 0,
                        "row": 3,
                        "pady": [8, 0]
                    },
                    "action": "cancel"
                }
            ]
        }
    ]
}